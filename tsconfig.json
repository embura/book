{
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": ".",
    "strict": true,
    "strictNullChecks": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "lib": [
      "ES6",
      "ES2021",
      "DOM"
    ],
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@tests/*": [
        "tests/*"
      ],
      "@domain/*": [
        "src/domain/*"
      ],
      "@infra/*": [
        "src/infra/*"
      ],
      "@main/*": [
        "src/main/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "dev-infra.ts",
    "jest.integration.setup.ts",
    "jest.setup.ts",
    "@types/**/*"
  ]
}